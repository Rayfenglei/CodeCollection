<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_download_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_start"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/bt_download_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_stop"
        android:textAllCaps="false"
        android:layout_below="@id/bt_download_start"/>
    <Button
        android:id="@+id/bt_download_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_cancel"
        android:layout_below="@id/bt_download_stop"
        android:textAllCaps="false"/>

</RelativeLayout>